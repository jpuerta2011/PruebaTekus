@using (Html.BeginForm("", "", FormMethod.Post,
                    new { @class = "form-horizontal", role = "form", id = "formSaveClient" }))
{
    
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="form-group">
                @Html.Label("Nombre", new { @for = "Name" })
                @Html.TextBox("Name", string.Empty, new { @class = "form-control", maxlength = "200", required = "required" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="form-group">
                @Html.Label("NIT", new { @for = "NIT" })
                @Html.TextBox("NIT", string.Empty, new { @class = "form-control", maxlength = "20", required = "required" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="form-group">
                @Html.Label("E-mail", new { @for = "Email" })
                @Html.TextBox("Email", string.Empty, new { @class = "form-control", maxlength = "100",
                    required = "required", type = "email" })
            </div>
        </div>
    </div>
    <div class="row">
        <button id="btnGuardar" class="btn btn-success">Guardar</button>
    </div>
}