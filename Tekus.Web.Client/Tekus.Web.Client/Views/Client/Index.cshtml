@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Clientes</h2>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            @Html.ActionLink("Agregar cliente", "AddClient", "Client", new { }, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>

@Html.Partial("_ClientListPartial")

@section scripts{
    @Scripts.Render("~/bundles/datatables")
    <script type="text/javascript">
        $(document).ready(function () {
            clientViews.initClientList("@ViewBag.endpoint");
        })
    </script>
}